<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#efeff4"
        android:orientation="vertical"
        >

        <include
                android:id="@+id/register_actionbar"
                layout="@layout/app_actionbar" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#ffffff"
                android:layout_marginTop="20dp"
                >
                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        >
                        <EditText
                                android:id="@+id/register_phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="手机号"
                                android:background="@null"
                                android:numeric="integer"
                                android:inputType="number"
                                android:textSize="20sp"
                                android:maxLength="11"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                />
                </FrameLayout>
                
                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#6c6c6c"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        />

                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <EditText
                                android:id="@+id/register_certifycode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="验证码"
                                android:background="@null"
                                android:padding="8dp"
                                android:numeric="integer"
                                android:inputType="number"
                                android:layout_gravity="center_vertical"
                                android:textSize="20sp"
                                android:textColor="#a9a9a9"
                                />
                        <TextView
                                android:id="@+id/register_getcode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|right"
                                android:text="获取验证码"
                                android:textSize="20sp"
                                android:textColor="#ff5f5c"
                                android:padding="15dp"
                                />
                </FrameLayout>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#6c6c6c"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        />

                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                                android:id="@+id/register_setpwd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="设置密码"
                                android:textSize="20sp"
                                android:textColor="#a9a9a9"
                                android:layout_gravity="center_vertical"
                                android:padding="10dp"
                                />
                        <EditText
                                android:id="@+id/register_pwd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:password="true"
                                android:layout_gravity="center"
                                android:padding="10dp"
                                android:background="@null"
                                android:hint="最多10位"
                                android:maxLength="10"
                                />

                        <ImageView
                                android:id="@+id/register_eyeclose"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|right"
                                android:src="@mipmap/login_eye_close"
                                android:layout_marginRight="15dp"
                                />

                </FrameLayout>


        </LinearLayout>

        <TextView
                android:id="@+id/register_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册即代表您同意&lt;直播Go!服务和隐私条款&gt;"
                android:textSize="14sp"
                android:textColor="#a9a9a9"
                android:background="#efeff4"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                />


        <TextView
                android:id="@+id/register_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_bg_red"
                android:text="下一步"
                android:textColor="#ffffff"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_marginTop="20dp"
                />

</LinearLayout>
